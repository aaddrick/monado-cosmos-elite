{
    "name": "monado",
    "homepage": "https://monado.freedesktop.org",
    "version-string": "25.1",
    "dependencies": [
        {
            "name": "wil",
            "platform": "windows"
        },
        {
            "name": "pthreads",
            "platform": "windows"
        },
        "cjson",
        "eigen3",
        "glslang",
        "vulkan"
    ],
    "default-features": [
        "usb",
        "gui"
    ],
    "features": {
        "usb": {
            "description": "Support USB device drivers",
            "dependencies": [
                "libusb",
                "hidapi",
                {
                    "name": "zlib",
                    "platform": "linux"
                }
            ]
        },
        "gui": {
            "description": "Debug GUI support",
            "dependencies": [
                {
                    "name": "sdl2",
                    "features": [
                        "vulkan"
                    ]
                }
            ]
        },
        "tracking": {
            "description": "OpenCV-based tracking features",
            "dependencies": [
                "opencv"
            ]
        }
    },
    "builtin-baseline": "4334d8b4c8916018600212ab4dd4bbdc343065d1"
}
